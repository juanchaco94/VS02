<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #Layout_Administrator{
            background-color:#B27B00;            
        }
        
        footer{
            background-color:#1A69FF;
        }

    </style>
</head>
<body>
    <div id="Layout_Administrator" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle>" data-toggle="dropdown">Registro de Usuarios<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipos de documento", "Index", "documentTypes")</li>
                            <li>@Html.ActionLink("Rol del usuario", "Index", "rols")</li>
                            <li>@Html.ActionLink("Genero", "Index", "genders")</li>
                            <li>@Html.ActionLink("Datos personales", "Index", "people")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle>" data-toggle="dropdown">Información de carrera<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Especialidad", "Index", "Specialties")</li>
                            <li>@Html.ActionLink("Programa de formación", "Index", "trainingPrograms")</li>
                            <li>@Html.ActionLink("Trimestres", "Index", "trimesters")</li>
                            <li>@Html.ActionLink("Jornadas", "Index", "workingDays")</li>
                            <li>@Html.ActionLink("Ficha", "Index", "data")</li>
                            <li>@Html.ActionLink("Grupos", "Index", "groups")</li>
                            <li>@Html.ActionLink("Sedes", "Index", "Seats")</li>
                            <li>@Html.ActionLink("Ambientes de formación", "Index", "ambients")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Schedule Planner Application</p>
            <p class="text-center">Usuario Administrador</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
